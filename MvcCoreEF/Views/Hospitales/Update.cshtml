@{
}
@model Hospital

<h1>Modificar hospital</h1>

<form method="post">
    <label>Id hospital</label>
    <input type="number" name="idhospital" class="form-control" value="@Model.IdHospital" />
    <label>Nombre</label>
    <input type="text" name="nombre" class="form-control" value="@Model.Nombre" />
    <label>Direccion</label>
    <input type="text" name="direccion" class="form-control" value="@Model.Direccion" />
    <label>Telefono</label>
    <input type="text" name="telefono" class="form-control" value="@Model.Telefono" />
    <label>Numero de camas</label>
    <input type="number" name="camas" class="form-control" value="@Model.Camas" />
    <button class="btn btn-success">Modificar hospital</button>
</form>