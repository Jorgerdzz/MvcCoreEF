@{
}
@model List<Hospital>

<h1>Hospitales</h1>

<a class="btn btn-success" asp-controller="Hospitales" asp-action="Create">Crear hospital</a>

@if(Model != null)
{
    <table class="table table-info table-bordered">
        <thead>
            <tr>
                <th>NOMBRE</th>
                <th>DIRECCION</th>
                <th>TELEFONO</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Hospital hospital in Model)
            {
                <tr>
                    <td>@hospital.Nombre</td>
                    <td>@hospital.Direccion</td>
                    <td>@hospital.Telefono</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Hospitales" asp-action="Details" asp-route-idhospital="@hospital.IdHospital">Details</a>
                        <a class="btn btn-danger" asp-controller="Hospitales" asp-action="Delete" asp-route-idhospital="@hospital.IdHospital">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}